<div class="row justify-content-center">
  <div class="col-12">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, class: 'mt-4' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.file_field :profile_picture, class: 'form-control big-input no-border-radius', placeholder: 'Upload Picture' %>
      </div>

      <div class="form-group">
        <%= f.text_field :name, autofocus: true, class: 'form-control big-input no-border-radius', placeholder: 'Full Name' %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autocomplete: "email", class: 'form-control big-input no-border-radius', placeholder: 'Email' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control big-input no-border-radius', placeholder: 'Password' %>
      </div>

      <div class="form-group mt-3 mb-2 center">
        <%= f.submit "Register", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
