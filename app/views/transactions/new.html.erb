<div class="text-center">
  <%= form_with(model: [@category, @transaction], local: true, html: { class: 'needs-validation', novalidate: '' }) do |form| %>
    <% if @transaction.errors.any? %>
      <div class="alert alert-danger" role: "alert">
        <h4 class="alert-heading"><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h4>
        <ul>
        <% @transaction.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.text_field :title, class: 'form-control big-input no-border-radius', placeholder: 'Title' %>
    </div>

    <div class="form-group">
      <%= form.number_field :amount, step: 0.01, class: 'form-control big-input no-border-radius', placeholder: 'Amount' %>
    </div>

    <div class="form-group">
      <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: 'Select a category' }, { class: 'form-control big-input no-border-radius' } %>
    </div>

    <div class="actions mt-3">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to 'Back', category_transactions_path(@category), class: 'btn btn-light' %>
  </div>
</div>
