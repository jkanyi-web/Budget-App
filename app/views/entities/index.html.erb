<p style="color: green"><%= notice %></p>

<h1>Entities</h1>

<div id="entities">
  <% @entities.each do |entity| %>
    <div class="entity">
      <%= render entity %>
      <p>
        <%= link_to "Show this entity", entity %>
        <%= link_to 'Edit', edit_entity_path(entity) %> |
        <%= link_to 'Destroy', entity, method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New entity", new_entity_path %>
