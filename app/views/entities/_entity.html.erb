<div id="<%= dom_id entity %>">
  <p>
    <strong>Author:</strong>
    <%= entity.author_id %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= entity.name %>
  </p>

  <p>
    <strong>Amount:</strong>
    <%= entity.amount %>
  </p>

  <p>
    <strong>Created at:</strong>
    <%= entity.created_at %>
  </p>

  <%= link_to 'Edit', edit_entity_path(entity) %> |
  <%= link_to 'Destroy', entity, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
